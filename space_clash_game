myPlane.setStayInScreen(true)
info.setLife(5)

game.onUpdateInterval(1000,function on_update_interval(){
    myEnemy = sprites.create(img`
        ..ccc.........ffffff....
        ..f4cc.......fcc22ff....
        ..f44cc...fffccccff.....
        ..f244cccc22224442cc....
        ..f224cc2222222244b9c...
        ..cf2222222222222b999c..
        .c22c222222222b11199b2c.
        f22ccccccc222299111b222c
        fffffcc222c222222222222f
        .....f2222442222222222f.
        ....f222244fc2222222ff..
        ...c222244ffffffffff....
        ...c2222cfffc2f.........
        ...ffffffff2ccf.........
        .......ffff2cf..........
        ........fffff...........
    `, SpriteKind.Enemy)
    myEnemy.setPosition(160, randint(0, 120))
    myEnemy.setVelocity(-100, 0)
})


game.onUpdateInterval(1000, function on_update_interval() {
    alien = sprites. create(img`
